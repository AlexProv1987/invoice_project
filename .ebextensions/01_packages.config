packages:
  yum:
    git: []
    libjpeg-turbo-devel: []
  
commands:
    01_postgres_activate:
        command: sudo amazon-linux-extras enable postgresql10
    02_postgres_install:
        command: sudo yum install -y postgresql-devel
        
container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python invoice_project/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /opt/python/run/venv/bin/activate && python invoice_project/manage.py createsuper"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python invoice_project/manage.py collectstatic --noinput"